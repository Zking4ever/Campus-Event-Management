<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.campus.management.controller.RegistrationController"
            stylesheets="@desktop.css">

    <!-- Left Panel: Illustration + description -->
    <left>
        <VBox alignment="CENTER" spacing="20"
              style="-fx-background-color: #4f46e5;-fx-padding: 40;"
              prefWidth="400"
              >

            <Label text="Join Campus Events"
                   style="-fx-font-size:28px; -fx-text-fill:white; -fx-font-weight:bold;"/>

            <Label text="Create an account and start registering for all exciting campus events."
                   wrapText="true"
                   style="-fx-font-size:16px; -fx-text-fill:white;"/>

            <ImageView fx:id="registerIllustration"
                       fitWidth="200"
                       preserveRatio="true"
                       pickOnBounds="true"
                       smooth="true"
                       style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10,0,0,5);"/>
        </VBox>
    </left>

    <!-- Right Panel: Registration Form -->
    <center>
        <VBox alignment="CENTER" spacing="18" style="-fx-padding: 60; -fx-background-color: #f8fafc;">
            <Label text="Create Account" styleClass="title"/>
            <Label text="Sign up for your campus account" styleClass="subtitle"/>

            <HBox spacing="10" alignment="CENTER_LEFT" styleClass="input-box">
                <Label text="ðŸ‘¤" styleClass="icon"/>
                <TextField fx:id="usernameField" promptText="Username"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT" styleClass="input-box">
                <Label text="ðŸ”’" styleClass="icon"/>
                <PasswordField fx:id="passwordField" promptText="Password"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT" styleClass="input-box">
                <Label text="ðŸ› ï¸" styleClass="icon"/>
                <ChoiceBox fx:id="roleChoice" prefWidth="240"/>
            </HBox>

            <Button text="Register" onAction="#onRegister" styleClass="register-button"/>
            <Label fx:id="statusLabel" styleClass="error-label"/>

            <HBox alignment="CENTER">
                <Label text="Already have an account? "/>
                <Hyperlink text="Sign in" onAction="#goToLogin" styleClass="signup-link"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>

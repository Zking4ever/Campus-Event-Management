<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.campus.management.controller.RegistrationController"
      alignment="CENTER"
      spacing="25"
      prefWidth="600"
      prefHeight="400"
      style="-fx-background-color: linear-gradient(to bottom, #f8fafc, #e2e8f0);">

    <!-- Page padding -->
    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <!-- Title Card -->
    <VBox spacing="8"
          alignment="CENTER"
          style="-fx-background-color: white;
                 -fx-background-radius: 12;
                 -fx-padding: 20;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 12, 0, 0, 4);">

        <Label text="User Registration"
               style="-fx-font-size: 20px;
                      -fx-font-weight: bold;
                      -fx-text-fill: #1e293b;"/>

        <Label text="Create a new account"
               style="-fx-font-size: 13px;
                      -fx-text-fill: #64748b;"/>
    </VBox>

    <!-- Form Card -->
    <VBox spacing="12"
          alignment="CENTER"
          style="-fx-background-color: white;
                 -fx-background-radius: 12;
                 -fx-padding: 25;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 12, 0, 0, 4);">

        <TextField fx:id="usernameField"
                   promptText="Username"
                   maxWidth="300"/>

        <PasswordField fx:id="passwordField"
                       promptText="Password"
                       maxWidth="300"/>

        <ChoiceBox fx:id="roleChoice"
                   maxWidth="300"/>

        <Button text="Register"
                onAction="#onRegister"
                style="-fx-background-color: #22c55e;
                       -fx-text-fill: white;
                       -fx-font-size: 13px;
                       -fx-background-radius: 8;
                       -fx-padding: 10 22;"/>

        <Label fx:id="statusLabel"
               textFill="#16a34a"
               style="-fx-font-size: 12px;"/>
    </VBox>

</VBox>

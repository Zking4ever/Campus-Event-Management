<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.campus.management.controller.RegistrationController"
            stylesheets="@login.css">

    <children>
        <StackPane AnchorPane.topAnchor="0"
                   AnchorPane.bottomAnchor="0"
                   AnchorPane.leftAnchor="0"
                   AnchorPane.rightAnchor="0"
                   styleClass="background">

            <VBox spacing="18"
                  alignment="CENTER"
                  maxWidth="400"
                  styleClass="login-card">

                <!-- Title -->
                <Label text="Create Account"
                       styleClass="title"/>
                <Label text="Sign up for your campus account"
                       styleClass="subtitle"/>

                <!-- Username -->
                <HBox spacing="10" alignment="CENTER_LEFT" styleClass="input-box">
                    <Label text="ðŸ‘¤" styleClass="icon"/>
                    <TextField fx:id="usernameField"
                               promptText="Username"/>
                </HBox>

                <!-- Password -->
                <HBox spacing="10" alignment="CENTER_LEFT" styleClass="input-box">
                    <Label text="ðŸ”’" styleClass="icon"/>
                    <PasswordField fx:id="passwordField"
                                   promptText="Password"/>
                </HBox>

                <!-- Role Selection -->
                <HBox spacing="10" alignment="CENTER_LEFT" styleClass="input-box">
                    <Label text="ðŸ› ï¸" styleClass="icon"/>
                    <ChoiceBox fx:id="roleChoice" prefWidth="240"/>
                </HBox>

                <!-- Register Button -->
                <Button text="Register"
                        onAction="#onRegister"
                        styleClass="register-button"/>

                <!-- Status -->
                <Label fx:id="statusLabel"
                       styleClass="error-label"/>

                <!-- Sign In Link -->
                <HBox alignment="CENTER">
                    <Label text="Already have an account? "/>
                    <Hyperlink text="Sign in"
                               onAction="#goToLogin"
                               styleClass="signup-link"/>
                </HBox>

            </VBox>
        </StackPane>
    </children>
</AnchorPane>

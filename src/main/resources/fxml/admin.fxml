<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.campus.management.controller.AdminController"
      alignment="CENTER"
      spacing="25"
      prefWidth="700"
      prefHeight="500"
      style="-fx-background-color: linear-gradient(to bottom, #f8fafc, #e2e8f0);">

    <!-- Page Padding -->
    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <!-- Title Card -->
    <VBox spacing="8"
          alignment="CENTER"
          style="-fx-background-color: white;
                 -fx-background-radius: 12;
                 -fx-padding: 20;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 12, 0, 0, 4);">

        <Label text="Pending Events"
               style="-fx-font-size: 20px;
                      -fx-font-weight: bold;
                      -fx-text-fill: #1e293b;"/>

        <Label text="Approve events submitted by organizers"
               style="-fx-font-size: 13px;
                      -fx-text-fill: #64748b;"/>
    </VBox>

    <!-- Events List Card -->
    <VBox spacing="12"
          alignment="CENTER"
          style="-fx-background-color: white;
                 -fx-background-radius: 12;
                 -fx-padding: 25;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 12, 0, 0, 4);">

        <ListView fx:id="eventsListView" prefHeight="320" maxWidth="500"/>

        <HBox spacing="15" alignment="CENTER">
            <Button text="Refresh"
                    onAction="#loadPending"
                    style="-fx-background-color: #4f46e5;
                           -fx-text-fill: white;
                           -fx-font-size: 13px;
                           -fx-background-radius: 8;
                           -fx-padding: 10 18;"/>

            <Button text="Approve Selected"
                    onAction="#approveSelected"
                    style="-fx-background-color: #16a34a;
                           -fx-text-fill: white;
                           -fx-font-size: 13px;
                           -fx-background-radius: 8;
                           -fx-padding: 10 18;"/>
        </HBox>
    </VBox>

</VBox>

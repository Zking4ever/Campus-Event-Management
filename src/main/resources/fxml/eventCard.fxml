<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.campus.management.controller.EventCardController"
      spacing="8"
      style="-fx-border-color: #ddd; -fx-padding: 10;">

    <ImageView fx:id="eventImage" fitHeight="120" fitWidth="200" />

    <Label fx:id="title" style="-fx-font-weight: bold; -fx-font-size:25" />
    <Label fx:id="dateLabel" style="-fx-font-weight: bold;" />
    <Label fx:id="timeLabel" />
    <Label fx:id="locationLabel" />

    <Label fx:id="attendeesLabel" />

    <Label fx:id="descriptionLabel" wrapText="true" />

    <Button text="View Details" onAction="#onViewDetails"/>
</VBox>

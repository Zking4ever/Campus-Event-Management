<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.campus.management.controller.LoginController"
            stylesheets="@login.css">

    <!-- Background -->
    <children>
        <StackPane AnchorPane.topAnchor="0"
                   AnchorPane.bottomAnchor="0"
                   AnchorPane.leftAnchor="0"
                   AnchorPane.rightAnchor="0"
                   styleClass="background">

            <!-- Login Card -->
            <VBox spacing="18"
                  alignment="CENTER"
                  maxWidth="380"
                  styleClass="login-card">

                <Label text="Welcome Back"
                       styleClass="title"/>

                <Label text="Sign in to your campus account"
                       styleClass="subtitle"/>

                <!-- Username -->
                <HBox spacing="10" alignment="CENTER_LEFT" styleClass="input-box">
                    <Label text="ðŸ‘¤" styleClass="icon"/>
                    <TextField fx:id="usernameField"
                               promptText="Username"/>
                </HBox>

                <!-- Password -->
                <HBox spacing="10" alignment="CENTER_LEFT" styleClass="input-box">
                    <Label text="ðŸ”’" styleClass="icon"/>
                    <PasswordField fx:id="passwordField"
                                   promptText="Password"/>
                </HBox>

                <!-- Login Button -->
                <Button text="Login"
                        onAction="#onLogin"
                        styleClass="login-button"/>

                <!-- Status -->
                <Label fx:id="statusLabel"
                       styleClass="error-label"/>

                <!-- Sign Up Link -->
                <HBox alignment="CENTER">
                    <Label text="Don't have an account? "/>
                    <Hyperlink text="Sign up"
                               onAction="#goToRegister"
                               styleClass="signup-link"/>
                </HBox>

            </VBox>
        </StackPane>
    </children>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.campus.management.controller.DashboardController"
      alignment="CENTER"
      spacing="25"
      prefWidth="800"
      prefHeight="600"
      style="-fx-background-color: linear-gradient(to bottom, #f5f7fa, #e4ebf5);">

    <!-- Page Padding -->
    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <VBox spacing="10"
          alignment="CENTER"
          style="-fx-background-color: white;
                 -fx-background-radius: 12;
                 -fx-padding: 25;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 12, 0, 0, 4);">

        <Label fx:id="welcomeLabel"
               text="Welcome!"
               style="-fx-font-size: 20px;
                      -fx-font-weight: bold;
                      -fx-text-fill: #2c3e50;"/>

        <Label text="Choose an action below"
               style="-fx-text-fill: #6c757d;
                      -fx-font-size: 13px;"/>
    </VBox>

    <!-- Buttons Card -->
    <VBox spacing="15"
          alignment="CENTER"
          style="-fx-background-color: white;
                 -fx-background-radius: 12;
                 -fx-padding: 30;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 12, 0, 0, 4);">

        <HBox spacing="15" alignment="CENTER">
            <Button fx:id="rolePageButton"
                    text="Open Role Page"
                    onAction="#onOpenRolePage"
                    style="-fx-background-color: #4f46e5;
                           -fx-text-fill: white;
                           -fx-font-size: 13px;
                           -fx-background-radius: 8;
                           -fx-padding: 10 18;"/>

            <Button fx:id="registrationButton"
                    text="Registration"
                    onAction="#onOpenRegistration"
                    style="-fx-background-color: #0ea5e9;
                           -fx-text-fill: white;
                           -fx-font-size: 13px;
                           -fx-background-radius: 8;
                           -fx-padding: 10 18;"/>

            <Button fx:id="logoutButton"
                    text="Logout"
                    onAction="#onLogout"
                    style="-fx-background-color: #ef4444;
                           -fx-text-fill: white;
                           -fx-font-size: 13px;
                           -fx-background-radius: 8;
                           -fx-padding: 10 18;"/>
        </HBox>
    </VBox>

</VBox>
